@page
@model NapocaBike.Pages.UpdateProfileModel
@{
    ViewData["Title"] = "Update Profile";
}
<html>

<head>
<style>
   
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Roboto", sans-serif;
    }

    body {
        background-color: #f0f2f5;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 28px;
        color: #8EA3BF;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        font-size: 16px;
        color: #8EA3BF;
        display: block;
        margin-bottom: 8px;
    }

    input[type="text"],
    input[type="email"],
    input[type="file"],
    input[type="tel"] {
        width: 100%;
        padding: 8px 16px;
        font-family: 'Poppins', sans-serif;
        font-weight: 400;
        font-size: 14px;
            color: #8EA3BF;
        border: 1px solid #dcdcdc;
        border-radius: 4px;
        outline: none;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="file"]:focus,
    input[type="tel"]:focus {
        border-color: #999;
    }

    .text-danger {
        font-family: 'Poppins', sans-serif;
        font-weight: 400;
        font-size: 12px;
        color: #F25757;
        margin-top: 4px;
    }

    .form-control-file {
        border: none;
    }

    .btn {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 14px;
        padding: 8px 16px;
        cursor: pointer;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        outline: none;
    }

    .btn-primary {
        background-color: #F2CA50;
        color: #ffffff;
        margin-right: 10px;
    }

    .btn-secondary {
        background-color: #f1f1f1;
            color: #8EA3BF;
    }

    .btn-primary:hover {
            background-color: #F2CA59;
    }

    .btn-secondary:hover {
        background-color: #ddd;
    }
</style>
</head>

<body>
    <div class="container">
    <h1>@ViewData["Title"]</h1>

        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Member.ID" />

            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.Adress" class="control-label"></label>
                <input asp-for="Member.Adress" class="form-control" />
                <span asp-validation-for="Member.Adress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" readonly />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.Phone" class="control-label"></label>
                <input asp-for="Member.Phone" class="form-control" />
                <span asp-validation-for="Member.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                @if (!string.IsNullOrEmpty(Model.Member.ProfilePicturePath))
                {
                    <div>
                        <img src="@Model.Member.ProfilePicturePath" alt="Current Profile Picture" width="100" height="100" />
                    </div>
                }
                <input asp-for="ProfilePicture" class="form-control-file" type="file" data-val="false" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Profile</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
