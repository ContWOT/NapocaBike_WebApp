@page
@model NapocaBike.Pages.Locations.DeleteModel

@{
    ViewData["Title"] = "Delete Location";
}

<head>
    <link rel="stylesheet" href="~/css/crudStyle.css">
</head>
<body>
    <h1>Delete Location</h1>
    <hr />
    <h3 class="text-danger">Are you sure you want to delete this location?</h3>
    <div class="card bg-light mb-3">
        <div class="card-body">
            <h4 class="card-title">Location Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Adress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Adress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Program)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Program)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Latitude)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Latitude)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location.Longitude)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location.Longitude)
                </dd>
            </dl>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Location.ID" />
        <input type="submit" value="Delete" class="btn btn-primary" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</body>
